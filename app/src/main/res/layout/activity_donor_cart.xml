<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DonorActivities.DonorCart"
    android:id="@+id/cL">

    <ImageView android:id="@+id/path_5"
        android:src="@drawable/curve3reqitem"
        android:contentDescription="path_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="394dp"
        android:layout_height="219.98468017578dp" />

    <ImageView android:id="@+id/path_4"
        android:src="@drawable/curve2reqitem"
        android:contentDescription="path_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="393.99993896484dp"
        android:layout_height="189.11227416992dp" />

    <ImageView android:id="@+id/path_2"
        android:src="@drawable/curve1reqitem"
        android:contentDescription="path_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="393.99993896484dp"
        android:layout_height="195.83245849609dp" />

    <ImageView android:id="@+id/path_1004"
        android:src="@drawable/curve4reqitem"
        android:contentDescription="path_1004"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="394.00006103516dp"
        android:layout_height="188.81866455078dp" />

    <TextView android:id="@+id/yourCartTV"
        android:fontFamily="SF Pro Text"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#fff"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="88dp"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:text="Donation cart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <TextView android:id="@+id/tvDonatingTo"
        android:fontFamily="SF Pro Text"
        android:textSize="15sp"
        android:textColor="#EFEFEF"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvConsumerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donating to: ">

    </TextView>
    <TextView android:id="@+id/tvConsumerName"
        android:fontFamily="SF Pro Text"
        android:textSize="15sp"
        android:textColor="#EFEFEF"
        android:layout_marginTop="130dp"
        app:layout_constraintLeft_toRightOf="@+id/tvDonatingTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumer Name"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/donateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/path_5"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Donate"
        android:background="@drawable/rect_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/donateButton"
        android:textColor="#fff"
       />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
