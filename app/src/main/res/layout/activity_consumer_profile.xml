<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/consumerProfile_nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/consumerProfile_userNameET"
            android:text="Name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            />
        <EditText android:id="@+id/consumerProfile_userNameET"
            android:fontFamily="SF Pro Text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/consumerProfile_nameTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="335dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="29dp"
            android:layout_height="50dp"
            android:background="@drawable/etext_button_bck"
            android:backgroundTint="@color/edit_text_bck_color"
            android:hint="User Name"
            android:textColor="#6d6d6d "
            />
        <ImageButton android:id="@+id/consumerProfile_updateNameIBtn"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="shape"
            app:layout_constraintTop_toBottomOf="@id/consumerProfile_nameTV"
            app:layout_constraintLeft_toLeftOf="@id/consumerProfile_userNameET"
            android:background="@android:color/transparent"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/consumerProfile_addressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/consumerProfile_userNameET"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/consumerProfile_addressET"
            android:text="Addresss"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            />

        <EditText android:id="@+id/consumerProfile_addressET"
            android:fontFamily="SF Pro Text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_addressTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="335dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="29dp"
            android:layout_height="50dp"
            android:background="@drawable/etext_button_bck"
            android:backgroundTint="@color/edit_text_bck_color"
            android:hint="Address"
            android:textColor="#6d6d6d "
            />
        <ImageButton android:id="@+id/consumerProfile_updateAddressIBtn"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="shape"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_addressTV"
            app:layout_constraintLeft_toLeftOf="@id/consumerProfile_addressET"
            android:background="@android:color/transparent"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/consumerProfile_emailTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_addressET"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/consumerProfile_emailTV"
            android:text="Email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp" />

        <TextView android:id="@+id/consumerProfile_emailTV"
            android:fontFamily="SF Pro Text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_emailTextTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="335dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="29dp"
            android:layout_height="50dp"
            android:background="@drawable/etext_button_bck"
            android:backgroundTint="@color/edit_text_bck_color"
            android:hint="Email"
            android:textColor="#6d6d6d " />

        <TextView
            android:id="@+id/consumerProfile_accountTypeTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_emailTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/consumerProfile_accountTypeTV"
            android:text="Account Type"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp" />

        <TextView android:id="@+id/consumerProfile_accountTypeTV"
            android:fontFamily="SF Pro Text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_accountTypeTextTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="335dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="29dp"
            android:layout_height="50dp"
            android:background="@drawable/etext_button_bck"
            android:backgroundTint="@color/edit_text_bck_color"
            android:hint="Account type"
            android:textColor="#6d6d6d "
            />

        <TextView
            android:id="@+id/consumerProfile_aboutTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_accountTypeTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/consumerProfile_aboutET"
            android:text="Description"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp" />

        <EditText android:id="@+id/consumerProfile_aboutET"
            android:fontFamily="SF Pro Text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_aboutTextTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="335dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="29dp"
            android:layout_height="50dp"
            android:background="@drawable/etext_button_bck"
            android:backgroundTint="@color/edit_text_bck_color"
            android:hint="About"
            android:textColor="#6d6d6d "
            />
        <ImageButton android:id="@+id/consumerProfile_updateAboutIBtn"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="shape"
            app:layout_constraintTop_toBottomOf="@+id/consumerProfile_aboutTextTV"
            app:layout_constraintLeft_toLeftOf="@id/consumerProfile_aboutET"
            android:background="@android:color/transparent"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/consumerProfile_saveBtn"
            android:layout_width="335dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/etext_button_bck"
            android:backgroundTint="@color/btn_bck_color"
            app:layout_constraintTop_toBottomOf="@id/consumerProfile_aboutET"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:text="Save"
            android:fontFamily="SF Pro Text"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textAlignment="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>