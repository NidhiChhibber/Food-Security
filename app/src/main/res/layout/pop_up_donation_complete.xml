<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#EFEFEF"
    android:padding="10px">

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awesome. You donation was successful. You will receive an update when the donation is delivered to"
        android:textColor="#A7A7A7"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/donatedToName"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#A7A7A7"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Close"
        android:background="@drawable/rect_button"
        android:textColor="#fff"
        android:textColorHint="#eee"
        android:id="@+id/closePopupBtn"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/donatedToName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>